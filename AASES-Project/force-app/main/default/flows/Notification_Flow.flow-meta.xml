        </defaultConnector>
        <defaultConnectorLabel>Regular Exam</defaultConnectorLabel>
        <rules>
            <name>Final_Exam</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>$Record.AnswerSheet__r.ExamType__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Final Exam</stringValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Create_Grade_Report</targetReference>
            </connector>
            <label>Final Exam</label>
        </rules>
    </decisions>
