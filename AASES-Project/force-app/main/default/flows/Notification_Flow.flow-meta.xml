    <decisions>
        <name>Check_Score_Threshold</name>
        <label>Check Score Threshold</label>
        <locationX>176</locationX>
        <locationY>119</locationY>
        <defaultConnector>
            <targetReference>Send_Student_Email</targetReference>
        </defaultConnector>
        <defaultConnectorLabel>Normal Score</defaultConnectorLabel>
        <rules>
            <name>High_Score</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>$Record.TotalMarks__c</leftValueReference>
                <operator>GreaterThan</operator>
                <rightValue>
                    <numberValue>80</numberValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Send_Congratulations_Email</targetReference>
            </connector>
            <label>High Score</label>
        </rules>
        <rules>
            <name>Low_Score</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>$Record.TotalMarks__c</leftValueReference>
                <operator>LessThan</operator>
                <rightValue>
                    <numberValue>40</numberValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Send_Improvement_Email</targetReference>
            </connector>
            <label>Low Score</label>
        </rules>
    </decisions>
    <decisions>
        <name>Check_Exam_Type</name>
